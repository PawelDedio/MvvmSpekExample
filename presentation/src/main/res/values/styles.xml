<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Layouts -->
    <style name="LayoutDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/mainBackground</item>
    </style>

    <style name="LayoutDefaultWrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/mainBackground</item>
    </style>

    <style name="LayoutCell" parent="LayoutDefault">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/mainBackground</item>
        <item name="android:paddingTop">@dimen/spacing_medium</item>
        <item name="android:paddingBottom">@dimen/spacing_medium</item>
        <item name="android:paddingStart">@dimen/spacing_medium</item>
        <item name="android:paddingEnd">@dimen/spacing_medium</item>
    </style>

    <style name="LayoutNavigation" parent="LayoutDefault">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LayoutInsideScroll" parent="LayoutDefault">
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!-- Lists -->
    <style name="RecyclerDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
        <item name="showDivider">true</item>
    </style>


    <!-- Dividers -->
    <style name="DividerHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/horizontal_divider_height</item>
        <item name="android:background">@color/dividerBackground</item>
    </style>


    <!-- Image View -->
    <style name="ImageViewDefault">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
    </style>

    <style name="ImageView3xSmall" parent="ImageViewDefault">
        <item name="android:layout_width">@dimen/icon_3x_small</item>
        <item name="android:layout_height">@dimen/icon_3x_small</item>
    </style>

    <style name="ImageView1xSmall" parent="ImageViewDefault">
        <item name="android:layout_width">@dimen/icon_1x_small</item>
        <item name="android:layout_height">@dimen/icon_1x_small</item>
    </style>

    <style name="ImageViewRounded" parent="ImageViewDefault">
        <item name="cornerRadius">@dimen/default_corners_radius</item>
    </style>


    <!-- Text Views -->
    <style name="TextDefault">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextDefaultBold" parent="TextDefault">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text3xSmall" parent="TextDefault">
        <item name="android:textSize">@dimen/font_3x_small</item>
    </style>

    <style name="Text2xSmall" parent="TextDefault">
        <item name="android:textSize">@dimen/font_2x_small</item>
    </style>

    <style name="Text2xSmallWhite" parent="Text2xSmall">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text2xSmallWhiteBold" parent="Text2xSmallWhite">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text1xSmall" parent="TextDefault">
        <item name="android:textSize">@dimen/font_1x_small</item>
    </style>

    <style name="Text1xSmallBold" parent="Text1xSmall">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text1xSmallWhite" parent="Text1xSmall">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextSmall" parent="TextDefault">
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="TextSmallBold" parent="TextSmall">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSmallGrayDark" parent="TextSmall">
        <item name="android:textColor">@color/grayDark</item>
    </style>

    <style name="TextSmallBlue" parent="TextSmall">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="TextSmallBlueBold" parent="TextSmallBlue">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextMedium" parent="TextDefault">
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="TextMediumBold" parent="TextMedium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextMediumBlue" parent="TextMedium">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="TextMediumGrayDark" parent="TextMedium">
        <item name="android:textColor">@color/grayDark</item>
    </style>

    <style name="TextMediumBlueBold" parent="TextMediumBlue">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextMediumGrayDarkBold" parent="TextMediumGrayDark">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextLarge" parent="TextDefault">
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="TextLargeWhite" parent="TextLarge">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextLargeBlue" parent="TextLarge">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="TextLargeBold" parent="TextLarge">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextLargeWhiteBold" parent="TextLargeWhite">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextLargeBlueBold" parent="TextLargeBlue">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text1xLarge" parent="TextDefault">
        <item name="android:textSize">@dimen/font_1x_large</item>
    </style>

    <style name="Text1xLargeWhite" parent="Text1xLarge">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text1xLargeWhiteBold" parent="Text1xLargeWhite">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text2xLarge" parent="TextDefault">
        <item name="android:textSize">@dimen/font_2x_large</item>
    </style>

    <style name="Text2xLargeBold" parent="Text2xLarge">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text2xLargeWhite" parent="Text2xLarge">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text2xLargeWhiteBold" parent="Text2xLargeWhite">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text3xLarge" parent="TextDefault">
        <item name="android:textSize">@dimen/font_3x_large</item>
    </style>

    <style name="Text3xLargeBold" parent="Text3xLarge">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text4xLarge" parent="TextDefault">
        <item name="android:textSize">@dimen/font_4x_large</item>
    </style>

    <style name="Text4xLargeBold" parent="Text4xLarge">
        <item name="android:textStyle">bold</item>
    </style>


    <!-- Inputs -->
    <style name="InputDefault">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="InputBlue" parent="InputDefault">
        <item name="android:layout_height">@dimen/input_blue_height</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:background">@drawable/input_blue_background</item>
        <item name="android:textColor">@color/grayDark</item>
        <item name="android:textColorHint">@color/gray2</item>
    </style>


    <!-- Barriers -->
    <style name="BarrierDefault">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="barrierBottom" parent="BarrierDefault">
        <item name="barrierDirection">bottom</item>
    </style>


    <!-- Guidelines -->
    <style name="GuidelineDefault">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="GuideLineVertical" parent="GuidelineDefault">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="GuideLineHorizontal" parent="GuidelineDefault">
        <item name="android:orientation">horizontal</item>
    </style>


    <!-- Scrolls -->
    <style name="ScrollDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fillViewport">true</item>
    </style>


    <!-- Buttons -->
    <style name="ButtonDefault">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonBlue" parent="ButtonDefault">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="elevation">0dp</item>
        <item name="android:background">@drawable/btn_blue_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_1x_small</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <!-- Loading -->
    <style name="LoadingDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:visibility">gone</item>
        <item name="loadingImageWidth">@dimen/loading_image_size</item>
        <item name="loadingImageHeight">@dimen/loading_image_size</item>
    </style>
</resources>
